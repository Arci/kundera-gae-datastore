<?xml version="1.0" encoding="UTF-8"?>
<clientProperties>
    <datastores>
        <dataStore>
            <name>datastore</name>
            <connection>
                <properties>
                    <!-- optional, if present is created a fictitious root and every entity will be child -->
                    <!-- TODO decide if necessary -->
                    <property name="datastore.fictitious" value="fRoot"></property>

                    <!-- optional, can be "eventual" or "strong" -->
                    <property name="datastore.policy.read" value="strong"></property>
                    <!-- optional, read deadline in seconds -->
                    <property name="datastore.policy.read.deadline" value="5"></property>
                </properties>
            </connection>
        </dataStore>
    </datastores>
</clientProperties>